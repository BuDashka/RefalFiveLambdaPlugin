    <lang.parserDefinition language="Refal Five Lambda" implementationClass="ru.tereshkina.plugin.RefalFiveLambdaParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Refal Five Lambda" implementationClass="ru.tereshkina.plugin.RefalFiveLambdaSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="ru.tereshkina.plugin.RefalFiveLambdaColorSettingsPage"/>
    <lang.braceMatcher language="Refal Five Lambda" implementationClass="ru.tereshkina.plugin.RefalFiveLambdaBraceMatcher"/>
    <lang.commenter language="Refal Five Lambda" implementationClass="ru.tereshkina.plugin.RefalFiveLambdaCommenter"/>
    <completion.contributor language="Refal Five Lambda"
                            implementationClass="ru.tereshkina.plugin.RefalFiveLambdaCompletionContributor"/>
    <annotator language="Refal Five Lambda"
